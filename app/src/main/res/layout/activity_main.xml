<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/frag01Btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#26D628"
        android:onClick="changeFragment"
        android:text="Fragment 01"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/frag02Btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#FF26D628"
        android:onClick="changeFragment"
        android:text="Fragment 02"
        android:textAllCaps="true" />

    <fragment
        android:id="@+id/fragDefault"
        android:name="submmision.sliit.tute03.Fragment1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>